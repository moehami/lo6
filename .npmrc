# 🚀 Faster installs
progress=false
audit=false
fund=false

# Ensure lockfile consistency (needed for npm ci)
package-lock=true

# Registry (use mirror for speed, fallback to official)
registry=https://registry.npmmirror.com/
fallback-registry=https://registry.npmjs.org/

# ⏱ Retry network requests if slow
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=1000
fetch-retry-maxtimeout=60000
