# Always prefer cached packages for speed
prefer-offline=true

# No progress bar in CI
progress=false

# Skip security audit in CI for faster installs
audit=false

# Skip funding messages
fund=false

# Automatically ignore peer dependency conflicts
legacy-peer-deps=true

# Use official registry; mirror if needed for faster downloads
registry=https://registry.npmmirror.com
fallback-registry=https://registry.npmjs.org/

# Retry settings for slow networks
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=1000
fetch-retry-maxtimeout=60000
